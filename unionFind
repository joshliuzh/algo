class UnionFind:
    
    def __init__(self, n): 
        self.root = list(range(n))
    
    def union(self, x, y): 
        self.root[self.find(x)] = self.find(y)
    
    def find(self, x):
        if x != self.root[x]: 
            self.root[x] = self.find(self.root[x])
        return self.root[x]
